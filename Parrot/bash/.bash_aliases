# Aliases for Raspberry Pi OS

# ------------------Aliases for System--------------------
# - System Update
alias upgrade='sudo apt update && sudo apt full-upgrade -y'

# - Clear Terminal
alias c='clear'

# - Reset
alias re='reset'

# - Tree
alias trea='tree -a'

# - List of hidden files
alias lsa='ls -a'

# -----------Aliases for Changing Directories-------------

# - Change Directory to Dotfiles Directory
alias dotfiles='cd ~/dotfiles'

# - Change Directory to Vimrc Extensions Directory
alias vplug='cd ~/.vim/plugged/vimrc-extensions'
